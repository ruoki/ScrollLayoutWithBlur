<com.ruoki.scrolllayoutwithblurlib.ScrollLayoutWithBlur
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_down_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.ruoki.scrolllayoutwithblurlib.content.ContentScrollView
        android:id="@+id/scroll_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp">
        <GridView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/form_main_function_grid_more"
            android:layout_marginTop="46dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:horizontalSpacing="1dp"
            android:listSelector="@drawable/selector_grid"
            android:numColumns="3"
            android:scrollbars="none"/>
    </com.ruoki.scrolllayoutwithblurlib.content.ContentScrollView>
    <ImageButton
        android:id="@+id/ibtn_bottom_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:scaleType="center"
        android:layout_marginTop="23dp"
        android:background="@drawable/delete"
        />

</com.ruoki.scrolllayoutwithblurlib.ScrollLayoutWithBlur>